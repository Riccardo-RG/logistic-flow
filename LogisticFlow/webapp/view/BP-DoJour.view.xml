<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" controllerName="logistic-flow.controller.BP-DoJour">

    <Page title="Recherche Bon De Prèparation" showNavButton="true" navButtonPress="onNavBack">

        <content>
            <Panel class="bpPanel">
                <VBox>

                    <RadioButtonGroup select="onSelectionChange" columns="2">
                        <buttons>
                            <RadioButton text="N° BP" selected="true" />
                            <RadioButton text="Rèf.Commande" />
                        </buttons>
                    </RadioButtonGroup>

                    <SearchField id="bpSearchField" width="100%" placeholder="Rechercher..." liveChange="onSearch" />

                    <!-- Barra degli strumenti con tre pulsanti di sorting -->
                    <Toolbar class="toolbarDojur">
                        <Button text="Filtrer par date" icon="sap-icon://calendar" press="onOpenDateFilter" />

                        <ToolbarSpacer />
                        <Button text="ASC" icon="sap-icon://sort-ascending" press="onSortAsc" />
                        <Button text="DESC" icon="sap-icon://sort-descending" press="onSortDesc" />
                        <Button icon="sap-icon://undo" press="onSortReset" />
                    </Toolbar>

                    <Table id="bpTable" items="{/BPRechercheData}" class="borderedTable scrollableTable">
                        <columns>
                            <Column width="5em">
                                <Text text="Date" />
                            </Column>
                            <Column width="3em">
                                <Text text="BP" />
                            </Column>
                            <Column width="15em">
                                <Text text="Nom client" />
                            </Column>
                            <Column width="5em">
                                <Text text="Code Client" />
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem type="Active" press="onRowSelect">
                                <cells>
                                    <Text text="{date}" />
                                    <Text text="{BP}" />
                                    <Text text="{NomClient}" />
                                    <Text text="{CodeClient}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <HBox class="buttonContainerWithGap" width="100%" justifyContent="Center" alignItems="Center">
                        <Button text="Annuler" type="Default" press="onCancel" class="bigButton annulerButton"/>
                        <Button text="Valider" type="Emphasized" press="onValidate" class="bigButton validerButton"/>
                    </HBox>

                </VBox>
            </Panel>
        </content>
    </Page>

    <!-- Popover per selezione delle date -->
    <Popover id="dateFilterPopover" placement="Bottom" title="Sélectionner la Période" beforeOpen="onBeforeOpenDateFilter">
        <VBox class="dateFilterContainer" alignItems="Center" justifyContent="Center" width="250px">
            <VBox alignItems="Center" justifyContent="Center" width="100%">
                <DatePicker id="fromDatePicker" width="90%" displayFormat="dd MM yyyy" valueFormat="yyyy-MM-dd" placeholder="dd MM yyyy" />
                <DatePicker id="toDatePicker" width="90%" displayFormat="dd MM yyyy" valueFormat="yyyy-MM-dd" placeholder="dd MM yyyy" />
            </VBox>
            <Button text="Appliquer" type="Emphasized" press="onApplyDateFilter" class="applyButton"/>
        </VBox>
    </Popover>

</mvc:View>